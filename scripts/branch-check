#!/bin/bash

# Protect master from accidental commits.
echo "ğŸ”  Checking branch name..."
branchName=$(git branch | grep '*' | sed 's/* //')

if [ $branchName == 'master' ]
then
  echo -e "\nğŸ’”  Cannot commit to master, please create a branch.\n" && exit 1
fi

if [[ $branchName = *[![:ascii:]]* ]]
then
  echo -e "\nğŸ’”  Branch name contains non ASCII characters, please rename branch.\n" && exit 1
fi

if [[ $branchName =~ [A-Z] ]]
then
  echo -e "\nğŸ’”  Branch name should not contain any upper case letters.\n" && exit 1
fi

if [[ $branchName =~ '/' ]]
then
  echo -e "\nğŸ’”  Branch name should not contain '/' character.\n" && exit 1
fi
